{
    "name": "music163",
    "description": "免费下载音乐",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "./background.js"
    },
    "permissions": [
        "downloads",
        "notifications"
    ],
    "action": {
        "default_popup": "./popup.html"
    },
    "icons": {
        "128": "./assets/icon/icon128.png",
        "16": "./assets/icon/icon16.png",
        "48": "./assets/icon/icon48.png"
    },
    "options_page": "./options.html",
    "content_scripts": [
        {
            "js": [
                "./content.js"
            ],
            "matches": [
                "*://music.163.com/*"
            ],
            "run_at": "document_end"
        }
    ],
    "host_permissions": [
        "*://music.163.com/*"
    ]
}